{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "RequestThrottling": {
    "Enabled": true,
    "Delay": 10000
  },

  "PdfApi": {
    "Uri": "https://api.pdf.co",
    "ApiKey": "YOUR API KEY"
  },

  "Smtp": {
    "Host": "YOUR SMTP HOST",
    "Port": 0,
    "Login": "YOUR EMAIL",
    "Password": "YOUR PASSWORD"
  },

  "NpgsqlDatabase": {
    "Host": "192.168.99.100",
    "Port": 5432,
    "Username": "postgres",
    "Password": "postgres",
    "Database": "pdf-api",
    "ApplicationName": "Pdf.Api",
    "MinPoolSize": 10,
    "MaxPoolSize": 50
  },

  "EmailConfirmation": {
    "CodeLength": 8,
    "RequestTtl": 300,
    "UnsuccessfulAttemptsLimit": 3
  }
}
